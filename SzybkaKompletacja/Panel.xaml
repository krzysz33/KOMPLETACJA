                                <dxg:GridColumn FieldName="ID_IHP_GRUPAKART" Visible="False" Header="ID_GRUPAKART" />
                                <dxg:GridColumn FieldName="ID_IHP_JM" Visible="False" Header="ID_IHP_JM" />
