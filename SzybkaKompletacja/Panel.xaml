                            </dxg:GridControl>
                        </ControlTemplate>
                    </dxg:LookUpEdit.PopupContentTemplate>
                </dxg:LookUpEdit>

            </dxlc:LayoutItem>

            <dxlc:LayoutItem Label="Status :" HorizontalAlignment="Stretch">
                <dxg:LookUpEdit  
